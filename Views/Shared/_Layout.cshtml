<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    @*<link href="~/css/site.css" rel="stylesheet" />*@
</head>
<body>
    <header class="container-fluid">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <h1 class="navbar-brand">Welcome to dutch treat <i class="bi bi-brush-fill" style="color:white"></i></h1>
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#theMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="theMenu">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="About">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a></li>
                        @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                            }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center">Copyright 2022 Titan Corporation</div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>